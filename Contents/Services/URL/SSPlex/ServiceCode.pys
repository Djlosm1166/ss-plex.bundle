class SSPlexEnvironment:
    def log(self, message):
        """docstring for log"""
        Log(message)

    def json(self, payload_url, **params):
        """docstring for json"""
        return JSON.ObjectFromURL(payload_url, values = params)

    def css(self, haystack, selector):
        """docstring for css"""
        return HTML.ElementFromString(haystack).cssselect(selector)


    def xpath(self, haystack, query):
        """docstring for css"""
        return HTML.ElementFromString(haystack).xpath(query)

def MediaObjectsForURL(url):
    nil, nil, path, nil, query, nil = urlparse(url)
    params   = cgi.parse_qs(query)
    consumer = SSConsumer(params['url'][0])
    consumer.environment = SSPlexEnvironment()

    final = consumer.consume()

    obj = MediaObject(
            parts = [ PartObject(key = final) ],
    )

    return [ obj ]
